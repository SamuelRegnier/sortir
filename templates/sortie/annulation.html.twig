{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user.id == sortie.organisateur.id and sortie.etats.id != 6 %}
        <h1>Annuler une sortie</h1>
        <form action="{{ path('sortie_annulee', {'id': sortie.id}) }}" method="post">
            <div class="affSortie">
                <div>
                    <p>Nom de la sortie : </p>
                    <p>Date de la sortie : </p>
                    <p>Site organisateur : </p>
                    <p>Lieu : </p>
                    <label for="motif">Motif : </label>
                </div>
                <div>
                    <p>{{ sortie.nom }}</p>
                    <p>{{ sortie.dateHeureDebut|date('d-m-Y') }}</p>
                    <p>{{ sortie.site.nom }}</p>
                    <p>{{ sortie.lieux.nom }}</p>
                    <input type="text" name="motif" id="motif">
                </div>
            </div>
            <input type="submit" value="Enregistrer">
            <input type="button" value="Annuler" onclick="history.back()">
        </form>
    {% endif %}
{% endblock %}
