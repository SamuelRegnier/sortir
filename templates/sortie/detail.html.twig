{% extends 'base.html.twig' %}

{% block title %}{{parent()}}|Sortie{% endblock %}

{% block body %}
    <h1>Afficher une sortie</h1>
    <div>
        <div>
            <p>Nom de la sortie : {% sortie.nom %}</p>
            <p>Date et heure de la sortie : {% sortie.dateHeureDebut %}</p>
            <p>Date limite d'inscription : {% sortie.dateLimiteInscription %}</p>
            <p>Nombre de places : {% sortie.nbInscriptionsMax %}</p>
            <p>Dur√©e : {% sortie.duree %} minutes</p>
            <p>Description et infos : {% sortie.infosSortie %}</p>
        </div>
        <div>
            <p>Lieu : {% sortie.lieux.nom %}</p>
            <p>Rue : {% sortie.lieux.rue %}</p>
            <p>Ville : {% sortie.lieux.villes %}</p>
            <p>Code Postal : {% sortie.lieux.villes.codePostal %}</p>
            <p>Latitude : {% sortie.lieux.latitude %}</p>
            <p>Longitude : {% sortie.lieux.longitude %}</p>
        </div>
    </div>
    <div>
        <div>
            <h3>Liste des participants inscrit</h3>
            <table>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                </tr>
                <tr>
                    {% for participant in sortie %}
                        <td>{{ participant.pseudo }}</td>
                        <td>{{ particiant.prenom }} {{ participant.nom }}</td>
                </tr>
            </table>
        </div>
        <div>

        </div>
    </div>
{% endblock %}