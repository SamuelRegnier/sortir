{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Sites{% endblock %}

{% block body %}
    <h1>Liste des sites existents en base</h1>

    <div class="scroller">
        <table class="table" id="table1">
            <tr>
                <th scope="col">Nom du site</th>
                <th scope="col">Action</th>
            </tr>
            {% for site in sites%}
            <tr>
                <td>{{ site.nom }}</td>
                <td>
                    {% if not app.user.administrateur %}
                    <a href="{{ path('site_afficher', {'id': site.id}) }}">Afficher</a>
                    {% endif %}
                    {% if app.user.administrateur %}
                    <a href="{{ path('site_afficher', {'id': site.id}) }}">Afficher / Modifier / Supprimer</a>
                    {% endif %}
                </td>
            <tr>
                {% endfor %}
        </table>
    </div>
    {% if app.user.administrateur %}
        <div class="affSortie">
            <a href="{{ path('site_ajouter') }}" class="btn btn-warning">Cr√©er un site</a>
        </div>
    {% endif %}

{% endblock %}
